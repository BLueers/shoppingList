<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:paddingTop="5dip">
	
     <Button
        android:id="@+id/button_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text = "add list"
	/>
    <EditText
        android:id="@+id/edit_text_add_list"
		android:hint="list name"
		android:maxLines="1"
		android:scrollHorizontally="true"
		android:layout_toLeftOf="@id/button_add"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
	/>
<!--     <CheckBox -->
<!--         android:id="@+id/lists_check_all" -->
<!--         android:layout_width="wrap_content" -->
<!--         android:layout_alignParentRight="true" -->
<!--         android:layout_height="wrap_content" -->
<!-- 	 /> -->
     <Button
        android:id="@+id/button_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text = "delete"
	/>
    
    <ListView
        android:id="@+id/list_view_shopping_lists"
        android:layout_alignLeft="@id/edit_text_add_list"
        android:layout_below="@id/edit_text_add_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/button_delete"
		android:paddingRight="0dip"
        >
    </ListView>
 
</RelativeLayout>
